{
    "info": {
        "_postman_id": "catalog-service-001",
        "name": "Catalog Service API",
        "description": "API collection for Catalog Service with JWT authentication from Auth Service",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_exporter_id": "12345"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login (Admin)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Extract and save access token from response",
                                    "if (pm.response.code === 200) {",
                                    "    const jsonData = pm.response.json();",
                                    "    ",
                                    "    // Save tokens to environment variables if they exist in response",
                                    "    if (jsonData.accessToken) {",
                                    "        pm.environment.set(\"access_token\", jsonData.accessToken);",
                                    "        console.log(\"Access token saved to environment\");",
                                    "    }",
                                    "    ",
                                    "    if (jsonData.refreshToken) {",
                                    "        pm.environment.set(\"refresh_token\", jsonData.refreshToken);",
                                    "        console.log(\"Refresh token saved to environment\");",
                                    "    }",
                                    "    ",
                                    "    // Extract cookies (accessToken and refreshToken are set as httpOnly cookies)",
                                    "    const cookies = pm.cookies.all();",
                                    "    console.log(\"Cookies received:\", cookies);",
                                    "    ",
                                    "    pm.test(\"Login successful\", function () {",
                                    "        pm.response.to.have.status(200);",
                                    "    });",
                                    "    ",
                                    "    pm.test(\"User ID returned\", function () {",
                                    "        pm.expect(jsonData).to.have.property('id');",
                                    "    });",
                                    "} else {",
                                    "    pm.test(\"Login failed with status: \" + pm.response.code, function () {",
                                    "        pm.expect.fail(\"Login request failed\");",
                                    "    });",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"{{admin_email}}\",\n    \"password\": \"{{admin_password}}\"\n}"
                        },
                        "url": {
                            "raw": "{{auth_service_url}}/auth/login",
                            "host": ["{{auth_service_url}}"],
                            "path": ["auth", "login"]
                        },
                        "description": "Login with admin credentials to obtain JWT access token. The token is automatically saved to environment variables and cookies."
                    },
                    "response": []
                }
            ],
            "description": "Authentication endpoints from Auth Service"
        },
        {
            "name": "Categories",
            "item": [
                {
                    "name": "Create Category",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Test response status",
                                    "pm.test(\"Category created successfully\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "// Test response structure",
                                    "pm.test(\"Response contains category data\", function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('message');",
                                    "    pm.expect(jsonData).to.have.property('category');",
                                    "});",
                                    "",
                                    "// Test category properties",
                                    "pm.test(\"Category has required fields\", function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    const category = jsonData.category;",
                                    "    ",
                                    "    pm.expect(category).to.have.property('_id');",
                                    "    pm.expect(category).to.have.property('name');",
                                    "    pm.expect(category).to.have.property('priceCofigration');",
                                    "    pm.expect(category).to.have.property('attributes');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        },
                        {
                            "listen": "prerequest",
                            "script": {
                                "exec": [
                                    "// Check if access token exists",
                                    "const accessToken = pm.environment.get(\"access_token\");",
                                    "",
                                    "if (!accessToken || accessToken === \"\") {",
                                    "    console.log(\"No access token found. Please run the 'Login (Admin)' request first.\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{access_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Pizza\",\n    \"priceCofigration\": {\n        \"base\": {\n            \"priceType\": \"base\",\n            \"availableOptions\": [\"small\", \"medium\", \"large\"]\n        }\n    },\n    \"attributes\": [\n        {\n            \"name\": \"Size\",\n            \"wigetType\": \"radio\",\n            \"defaultValue\": \"medium\",\n            \"availableOptions\": [\"small\", \"medium\", \"large\"]\n        },\n        {\n            \"name\": \"Crust\",\n            \"wigetType\": \"radio\",\n            \"defaultValue\": \"thin\",\n            \"availableOptions\": [\"thin\", \"thick\", \"stuffed\"]\n        }\n    ]\n}"
                        },
                        "url": {
                            "raw": "{{catalog_service_url}}/categories",
                            "host": ["{{catalog_service_url}}"],
                            "path": ["categories"]
                        },
                        "description": "Create a new category with price configuration and attributes. Requires admin role authentication.\n\n**Authentication:** Bearer Token (automatically set from environment variable)\n\n**Required Fields:**\n- name: string\n- priceCofigration: object with nested configuration\n- attributes: array of attribute objects\n\n**Note:** Make sure to run 'Login (Admin)' request first to obtain authentication token."
                    },
                    "response": []
                },
                {
                    "name": "Create Category - Burger",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Category created successfully\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "pm.test(\"Response contains category data\", function () {",
                                    "    const jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('category');",
                                    "    pm.expect(jsonData.category.name).to.eql(\"Burger\");",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{access_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Burger\",\n    \"priceCofigration\": {\n        \"base\": {\n            \"priceType\": \"base\",\n            \"availableOptions\": [\"regular\", \"double\"]\n        },\n        \"extras\": {\n            \"priceType\": \"additional\",\n            \"availableOptions\": [\"cheese\", \"bacon\", \"avocado\"]\n        }\n    },\n    \"attributes\": [\n        {\n            \"name\": \"Patty\",\n            \"wigetType\": \"radio\",\n            \"defaultValue\": \"regular\",\n            \"availableOptions\": [\"regular\", \"double\"]\n        },\n        {\n            \"name\": \"Extras\",\n            \"wigetType\": \"switch\",\n            \"defaultValue\": \"none\",\n            \"availableOptions\": [\"cheese\", \"bacon\", \"avocado\"]\n        }\n    ]\n}"
                        },
                        "url": {
                            "raw": "{{catalog_service_url}}/categories",
                            "host": ["{{catalog_service_url}}"],
                            "path": ["categories"]
                        },
                        "description": "Example: Create Burger category with base and additional price configurations"
                    },
                    "response": []
                },
